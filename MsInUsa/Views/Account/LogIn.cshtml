@model MsInUsa.Model.UserProfile

@{
    ViewBag.Title = "LogIn";
}

<div>
    @if (TempData["ConfirmationMessage"] != null) {<h4 style="padding-top:2em"><span class="alert alert-success col-xs-offset-2">@TempData["ConfirmationMessage"]!</span></h4>}
    else if (TempData["ErrorLogin"] != null)
    {<h4 style="padding-top:2em"><span class="alert alert-danger col-xs-offset-2">Invalid Credentials! Please Login Again.</span></h4> }
    <h1><span class="label label-info col-sm-offset-3 button-color">Log In</span></h1>
    @using(Html.BeginForm("Login","Account", FormMethod.Post, new { @class="form-horizontal", @role="form", @style="padding-top:2em;padding-left:2em"})){
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-3">
         @Html.TextBoxFor(m => m.Email_Id, new { @class = "form-control", type = "email", placeholder = "Email", required=""})
    </div>
     <div class="col-sm-3">
        @Html.ValidationMessageFor(m => m.Email_Id)
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Password:</label>
    <div class="col-sm-3"> 
         @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password"})
    </div>
     <div class="col-sm-3">
        @Html.ValidationMessageFor(m => m.Password) 
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><input type="checkbox"> Remember me </label>
         <span class="col-sm-offset-1">@Html.ActionLink("New User?", "Register", "Account", new { @class = "text-color" })</span> 
      </div>
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default button-color">Submit</button>
    </div>
  </div>
 }
</div>